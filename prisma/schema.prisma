generator client {
   provider = "prisma-client-js"
}

datasource db {
   provider = "postgresql"
   url      = env("DATABASE_URL")
}

model User {
   id            String    @id @default(cuid())
   name          String?
   username      String?   @unique
   bio           String?
   email         String?   @unique
   emailVerified DateTime? @map("email_verified")
   password      String?
   image         String?
   banner        String?
   createdAt     DateTime  @default(now()) @map("created_at")

   posts          Post[]
   comments       Comment[]
   bookmarks      Bookmark[]
   groups         GroupMember[]
   accounts       Account[]
   sessions       Session[]
   groupViewed    GroupView[]
   notifications  Notification[]
   postViewed     PostView[]
   createdReports UserReport[]      @relation("ReportCreator")
   reports        UserReport[]      @relation("ReportedUser")
   bannedGroups   BannedGroupUser[]
   GroupReport    GroupReport[]
   blockedUsers   BlockedUser[]     @relation("BlockedUserRelation")
   blockedBy      BlockedUser[]     @relation("BlockedByRelation")
   Subscriptions  Subscription[]
   Message        Message[]
   Reaction       Reaction[]
   viewedMessages MessageView[]
   PostReport     PostReport[]

   @@map("user")
}

model Subscription {
   id           String @id @default(cuid())
   subscription Json   @unique
   user         User   @relation(fields: [userId], references: [id])
   userId       String

   @@index([userId], name: "userId")
   @@map("subscription")
}

model BlockedUser {
   id        String   @id @default(cuid())
   userId    String   @map("user_id")
   blockedId String   @map("blocked_id")
   user      User     @relation(fields: [userId], references: [id], name: "BlockedUserRelation")
   blocked   User     @relation(fields: [blockedId], references: [id], name: "BlockedByRelation")
   createdAt DateTime @default(now()) @map("created_at")

   @@unique([userId, blockedId])
   @@map("blocked_user")
}

model CodeReset {
   id     String   @id @default(cuid())
   code   String   @unique
   email  String
   expiry DateTime

   @@map("password_reset_code")
}

model CodeVerifyAccount {
   id     String   @id @default(cuid())
   code   String   @unique
   email  String
   expiry DateTime

   @@map("verify_account_code")
}

model Notification {
   id        String   @id @default(cuid())
   title     String
   body      String?
   image     String?
   link      String?
   viewed    Boolean  @default(false)
   createdAt DateTime @default(now()) @map("created_at")

   user   User   @relation(fields: [userId], references: [id])
   userId String @map("user_id")

   @@map("notification")
}

model UserReport {
   id             Int      @id @default(autoincrement())
   title          String
   content        String?
   creatorId      String   @map("creator_id")
   reportedUserId String   @map("reported_user_id")
   creator        User     @relation("ReportCreator", fields: [creatorId], references: [id])
   reportedUser   User     @relation("ReportedUser", fields: [reportedUserId], references: [id])
   createdAt      DateTime @default(now()) @map("created_at")
   updatedAt      DateTime @updatedAt

   @@map("user_report")
}

model Post {
   id         String       @id @default(cuid())
   title      String
   content    String
   author     User         @relation(fields: [authorId], references: [id])
   authorId   String       @map("author_id")
   media      String[]     @default([])
   document   String[]     @default([])
   comments   Comment[]
   bookmarks  Bookmark[]
   postView   PostView[]
   group      Group        @relation(fields: [groupId], references: [id])
   groupId    String       @map("group_id")
   createdAt  DateTime     @default(now())
   pinned     Boolean      @default(false)
   PostReport PostReport[]
   approved   Boolean      @default(false)

   @@map("post")
}

model PostReport {
   id        String   @id @default(cuid())
   title     String
   content   String?
   creatorId String   @map("creator_id")
   postId    String   @map("post_id")
   creator   User     @relation(fields: [creatorId], references: [id])
   post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
   createdAt DateTime @default(now()) @map("created_at")
   updatedAt DateTime @updatedAt

   @@map("post_report")
}

model PostView {
   id       String   @id @default(cuid())
   viewedAt DateTime @default(now()) @map("viewed_at")

   post     Post   @relation(fields: [postId], references: [id], onDelete: Cascade)
   postId   String @map("post_id")
   viewer   User   @relation(fields: [viewerId], references: [id])
   viewerId String @map("viewer_id")

   @@unique([postId, viewerId])
   @@map("post_view")
}

model Comment {
   id        String    @id @default(cuid())
   text      String
   author    User      @relation(fields: [authorId], references: [id])
   authorId  String    @map("author_id")
   post      Post?     @relation(fields: [postId], references: [id], onDelete: Cascade)
   postId    String?   @map("post_id")
   createdAt DateTime  @default(now())
   children  Comment[] @relation("CommentToComment")
   parent    Comment?  @relation("CommentToComment", fields: [parentId], references: [id])
   parentId  String?   @map("parent_id")
   media     String[]  @default([])
   document  String[]  @default([])

   @@map("comment")
}

model Bookmark {
   id        String   @id @default(cuid())
   user      User     @relation(fields: [userId], references: [id])
   userId    String   @map("user_id")
   post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
   postId    String   @map("post_id")
   createdAt DateTime @default(now())

   @@unique([postId, userId])
   @@map("bookmark")
}

enum Role {
   member
   moderator
   owner
}

model GroupMember {
   id       String   @id @default(cuid())
   user     User     @relation(fields: [userId], references: [id])
   userId   String   @map("user_id")
   group    Group    @relation(fields: [groupId], references: [id])
   groupId  String   @map("group_id")
   role     Role     @default(member)
   joinedAt DateTime @default(now()) @map("joined_at")

   @@unique([groupId, userId])
   @@map("group_member")
}

model BannedGroupUser {
   id       String   @id @default(cuid())
   user     User     @relation(fields: [userId], references: [id])
   userId   String   @map("user_id")
   group    Group    @relation(fields: [groupId], references: [id])
   groupId  String   @map("group_id")
   bannedAt DateTime @default(now()) @map("banned_at")
   reason   String?

   @@unique([groupId, userId])
   @@map("banned_group_user")
}

model Group {
   id            String            @id @default(cuid())
   name          String?
   groupname     String            @unique
   description   String?
   members       GroupMember[]
   posts         Post[]
   categories    String[]          @default([])
   image         String?
   banner        String?
   groupViews    GroupView[]
   createdAt     DateTime          @default(now()) @map("created_at")
   bannedUsers   BannedGroupUser[]
   reports       GroupReport[]
   groupSettings GroupSetting?
   guidelines    String?
   GroupChat     GroupChat?

   @@map("group")
}

model GroupSetting {
   id            String  @id @default(cuid())
   groupId       String  @map("group_id")
   memberPosting Boolean @default(false) @map("member_posting")
   memberJoining Boolean @default(false) @map("member_joining")
   chatEnabled   Boolean @default(false) @map("chat_enabled")

   createdAt DateTime @default(now()) @map("created_at")

   group Group @relation(fields: [groupId], references: [id])

   @@unique([groupId])
   @@map("group_setting")
}

model GroupReport {
   id        String   @id @default(cuid())
   title     String
   content   String?
   creatorId String   @map("creator_id")
   groupId   String   @map("group_id")
   creator   User     @relation(fields: [creatorId], references: [id])
   group     Group    @relation(fields: [groupId], references: [id])
   createdAt DateTime @default(now()) @map("created_at")
   updatedAt DateTime @updatedAt

   @@map("group_report")
}

model GroupView {
   id       String   @id @default(cuid())
   viewedAt DateTime @default(now())

   group    Group  @relation(fields: [groupId], references: [id])
   groupId  String @map("group_id")
   viewer   User   @relation(fields: [viewerId], references: [id])
   viewerId String @map("viewer_id")

   @@unique([groupId, viewerId])
   @@map("group_view")
}

// Chat system

model GroupChat {
   id       String    @id @default(cuid())
   groupId  String
   group    Group     @relation(fields: [groupId], references: [id])
   messages Message[]

   @@unique([groupId])
   @@map("group_chat")
}

model Message {
   id          String     @id @default(cuid())
   content     String
   userId      String
   user        User       @relation(fields: [userId], references: [id])
   chatId      String
   chat        GroupChat  @relation(fields: [chatId], references: [id])
   attachments String[]
   media       String[]
   reactions   Reaction[]
   createdAt   DateTime   @default(now())

   replyToId String?
   replyTo   Message?  @relation("MessageToMessage", fields: [replyToId], references: [id])
   replies   Message[] @relation("MessageToMessage")

   views MessageView[]

   @@map("message")
}

model MessageView {
   id        String  @id @default(cuid())
   userId    String
   user      User    @relation(fields: [userId], references: [id])
   messageId String
   message   Message @relation(fields: [messageId], references: [id])

   @@unique([userId, messageId])
   @@map("message_view")
}

model Reaction {
   id        String  @id @default(cuid())
   emoji     String
   userId    String
   user      User    @relation(fields: [userId], references: [id])
   messageId String
   message   Message @relation(fields: [messageId], references: [id])

   @@map("reaction")
}

// Bullshit

model Account {
   id                String  @id @default(cuid())
   userId            String  @map("user_id")
   type              String
   provider          String
   providerAccountId String  @map("provider_account_id")
   refresh_token     String? @db.Text
   access_token      String? @db.Text
   expires_at        Int?
   token_type        String?
   scope             String?
   id_token          String? @db.Text
   session_state     String?

   user User @relation(fields: [userId], references: [id], onDelete: Cascade)

   @@unique([provider, providerAccountId])
   @@map("account")
}

model Session {
   id           String   @id @default(cuid())
   sessionToken String   @unique @map("session_token")
   userId       String   @map("user_id")
   expires      DateTime
   user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

   @@map("session")
}

model VerificationToken {
   identifier String
   token      String   @unique
   expires    DateTime

   @@unique([identifier, token])
   @@map("verification_token")
}
